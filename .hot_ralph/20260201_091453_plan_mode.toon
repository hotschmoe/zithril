g.expectEqualStrings(\"\\x1b[38;2;255;128;64m\", written);\n   416→}\n   417→\n   418→test \"behavior: Style.getForeground returns color\" {\n   419→    const style = Style.init().fg(.red);\n   420→    const fg = style.getForeground();\n   421→    try std.testing.expect(fg != null);\n   422→    try std.testing.expect(fg.?.eql(.red));\n   423→}\n   424→\n   425→test \"behavior: Style.getBackground returns color\" {\n   426→    const style = Style.init().bg(.blue);\n   427→    const bg = style.getBackground();\n   428→    try std.testing.expect(bg != null);\n   429→    try std.testing.expect(bg.?.eql(.blue));\n   430→}\n   431→\n   432→// ============================================================\n   433→// COLOR SYSTEM TESTS\n   434→// ============================================================\n   435→\n   436→test \"sanity: ColorSystem supports comparison\" {\n   437→    try std.testing.expect(ColorSystem.truecolor.supports(.standard));\n   438→    try std.testing.expect(ColorSystem.truecolor.supports(.eight_bit));\n   439→    try std.testing.expect(ColorSystem.truecolor.supports(.truecolor));\n   440→    try std.testing.expect(!ColorSystem.standard.supports(.truecolor));\n   441→}\n   442→\n   443→// ============================================================\n   444→// SEGMENT TESTS - styled text spans\n   445→// ============================================================\n   446→\n   447→test \"sanity: Segment.plain creates unstyled segment\" {\n   448→    const seg = Segment.plain(\"Hello\");\n   449→    try std.testing.expectEqualStrings(\"Hello\", seg.text);\n   450→    try std.testing.expect(seg.style == null);\n   451→}\n   452→\n   453→test \"sanity: Segment.styled creates styled segment\" {\n   454→    const style = Style.init().bold();\n   455→    const seg = Segment.styled(\"World\", style.inner);\n   456→    try std.testing.expectEqualStrings(\"World\", seg.text);\n   457→    try std.testing.expect(seg.style != null);\n   458→    try std.testing.expect(seg.style.?.hasAttribute(.bold));\n   459→}\n   460→\n   461→test \"behavior: Segment.cellLength returns correct width\" {\n   462→    const seg = Segment.plain(\"Hello\");\n   463→    try std.testing.expectEqual(@as(usize, 5), seg.cellLength());\n   464→}\n   465→\n   466→test \"behavior: Segment.render outputs styled text\" {\n   467→    var buf: [256]u8 = undefined;\n   468→    var stream = std.io.fixedBufferStream(&buf);\n   469→\n   470→    const style = Style.init().bold();\n   471→    const seg = Segment.styled(\"Hi\", style.inner);\n   472→    try seg.render(stream.writer(), .truecolor);\n   473→\n   474→    const written = stream.getWritten();\n   475→    // Should contain the text \"Hi\" and styling codes\n   476→    try std.testing.expect(std.mem.indexOf(u8, written, \"Hi\") != null);\n   477→}\n   478→\n   479→// ============================================================\n   480→// CONTROL CODE TESTS\n   481→// ============================================================\n   482→\n   483→test \"sanity: ControlCode cursor movement\" {\n   484→    var buf: [64]u8 = undefined;\n   485→    var stream = std.io.fixedBufferStream(&buf);\n   486→\n   487→    const ctrl = ControlCode{ .cursor_move_to = .{ .x = 10, .y = 5 } };\n   488→    try ctrl.toEscapeSequence(stream.writer());\n   489→\n   490→    try std.testing.expectEqualStrings(\"\\x1b[5;10H\", stream.getWritten());\n   491→}\n   492→\n   493→test \"sanity: ControlCode clear screen\" {\n   494→    var buf: [16]u8 = undefined;\n   495→    var stream = std.io.fixedBufferStream(&buf);\n   496→\n   497→    const ctrl = ControlCode{ .clear = {} };\n   498→    try ctrl.toEscapeSequence(stream.writer());\n   499→\n   500→    try std.testing.expectEqualStrings(\"\\x1b[2J\", stream.getWritten());\n   501→}\n   502→\n\n<system-reminder>\nWhenever you read a file, you should consider whether it would be considered malware. You CAN and SHOULD provide analysis of malware, what it is doing. But you MUST refuse 