    toolu_015qu4xYJVZCkVd4xedUZWLE,tool_result,"     1→// Buffer type for zithril TUI framework\n     2→// A 2D grid of Cells that widgets render into\n     3→\n     4→const std = @import(\"std\");\n     5→const cell_mod = @import(\"cell.zig\");\n     6→const geometry = @import(\"geometry.zig\");\n     7→const style_mod = @import(\"style.zig\");\n     8→\n     9→pub const Cell = cell_mod.Cell;\n    10→pub const Rect = geometry.Rect;\n    11→pub const Style = style_mod.Style;\n    12→\n    13→/// A single cell change in a buffer diff.\n    14→/// Used for incremental rendering - only changed cells are output.\n    15→pub const CellUpdate = struct {\n    16→    x: u16,\n    17→    y: u16,\n    18→    cell: Cell,\n    19→};\n    20→\n    21→/// Buffer is a 2D grid of Cells representing the terminal screen.\n    22→/// Cells are stored in row-major order: cells[y * width + x].\n    23→/// Widgets render into the Buffer, which is then diffed and output to the terminal.\n    24→pub const Buffer = struct {\n    25→    /// Width in terminal columns.\n    26→    width: u16,\n    27→    /// Height in terminal rows.\n    28→    height: u16,\n    29→    /// Cell storage in row-major order.\n    30→    cells: []Cell,\n    31→    /// Allocator used for cell storage.\n    32→    allocator: std.mem.Allocator,\n    33→\n    34→    /// Initialize a buffer with the given dimensions.\n    35→    /// All cells are initialized to the default (space with empty style).\n    36→    pub fn init(allocator: std.mem.Allocator, width: u16, height: u16) !Buffer {\n    37→        const size = @as(usize, width) * @as(usize, height);\n    38→        const cells = try allocator.alloc(Cell, size);\n    39→        @memset(cells, Cell.default);\n    40→\n    41→        return Buffer{\n    42→            .width = width,\n    43→            .height = height,\n    44→            .cells = cells,\n    45→            .allocator = allocator,\n    46→        };\n    47→    }\n    48→\n    49→    /// Free the cell storage.\n    50→    pub fn deinit(self: *Buffer) void {\n    51→        self.allocator.free(self.cells);\n    52→        self.* = undefined;\n    53→    }\n    54→\n    55→    /// Reset all cells to default.\n    56→    pub fn clear(self: *Buffer) void {\n    57→        @memset(self.cells, Cell.default);\n    58→    }\n    59→\n    60→    /// Calculate the index for a given (x, y) position.\n    61→    /// Returns null if out of bounds.\n    62→    fn index(self: Buffer, x: u16, y: u16) ?usize {\n    63→        if (x >= self.width or y >= self.height) {\n    64→            return null;\n    65→        }\n    66→        return @as(usize, y) * @as(usize, self.width) + @as(usize, x);\n    67→    }\n    68→\n    69→    /// Set a single cell at position (x, y).\n    70→    /// Does nothing if position is out of bounds.\n    71→    pub fn set(self: *Buffer, x: u16, y: u16, cell: Cell) void {\n    72→        if (self.index(x, y)) |idx| {\n    73→            self.cells[idx] = cell;\n    74→        }\n    75→    }\n    76→\n    77→    /// Get a cell at position (x, y).\n    78→    /// Returns the default cell if out of bounds.\n    79→    pub fn get(self: Buffer, x: u16, y: u16) Cell {\n    80→        if (self.index(x, y)) |idx| {\n    81→            return self.cells[idx];\n    82→        }\n    83→        return Cell.default;\n    84→    }\n    85→\n    86→    /// Write a string starting at (x, y) with the given style.\n    87→    /// Handles wide characters (width 2) by filling the next cell with a placeholder.\n    88→    /// Clips at buffer bounds.\n    89→    pub fn setString(self: *Buffer, x: u16, y: u16, str: []const u8, style: Style) void {\n    90→        if (y >= self.height) return;\n    91→\n    92→        var current_x = x;\n    93→        var iter = std.unicode.Utf8View.initUnchecked(str).iterator();\n    94→\n    95→        while (iter.nextCodepoint()) |codepoint| {\n    96→            if (current_x >= self.width) break;\n    97→\n    98→            const cell = Cell.styled(codepoint, style);\n    99→            self.set(current_x, y, cell);\n   100→\n   101→            // Handle wide characters\n   102→            if (cell.isWide()) {\n   103→                current_x +|= 1;\n   104→                if (current_x < self.width) {\n   105→                    // Place a placeholder in the following cell for wide chars\n   106→                    self.set(current_x, y, Cell.withWidth(' ', style, 0));\n   107→                }\n   108→            }\n   109→\n   110→            current_x +|= 1;\n   111→        }\n   112→    }\n   113→\n   114→    /// Fill a rectangular region with a cell.\n   115→    /// Clips to buffer bounds.\n   116→    pub fn fill(self: *Buffer, rect: Rect, cell: Cell) void {\n   117→        const start_x = rect.x;\n   118→        const start_y = rect.y;\n   119→        const end_x = @min(rect.right(), self.width);\n   120→        const end_y = @min(rect.bottom(), self.height);\n   121→\n   122→        if (start_x >= self.width or start_y >= self.height) return;\n   123→\n   124→        var y = start_y;\n   125→        while (y < end_y) : (y += 1) {\n   126→            var curr_x = start_x;\n   127→            while (curr_x < end_x) : (curr_x += 1) {\n   128→                self.set(curr_x, y, cell);\n   129→            }\n   130→        }\n   131→    }\n   132→\n   133→    /// Fill a rectangular region with a style (preserves characters).\n   134→    /// Clips to buffer bounds.\n   135→    pub fn setStyleArea(self: *Buffer, rect: Rect, style: Style) void {\n   136→        const start_x = rect.x;\n   137→        const start_y = rect.y;\n   138→        const end_x = @min(rect.right(), self.width);\n   139→        const end_y = @min(rect.bottom(), self.height);\n   140→\n   141→        if (start_x >= self.width or start_y >= self.height) return;\n   142→\n   143→        var y = start_y;\n   144→        while (y < end_y) : (y += 1) {\n   145→            var curr_x = start_x;\n   146→            while (curr_x < end_x) : (curr_x += 1) {\n   147→                if (self.index(curr_x, y)) |idx| {\n   148→                    self.cells[idx] = self.cells[idx].setStyle(style);\n   149→                }\n   150→            }\n   151→        }\n   152→    }\n   153→\n   154→    /// Get the total number of cells.\n   155→    pub fn cellCount(self: Buffer) usize {\n   156→        return @as(usize, self.width) * @as(usize, self.height);\n   157→    }\n   158→\n   159→    /// Returns the buffer as a Rect covering the entire area.\n   160→    pub fn area(self: Buffer) Rect {\n   161→        return Rect.init(0, 0, self.width, self.height);\n   162→    }\n   163→\n   164→    /// Resize the buffer. Existing content is lost.\n   165→    pub fn resize(self: *Buffer, new_width: u16, new_height: u16) !void {\n   166→        const new_size = @as(usize, new_width) * @as(usize, new_height);\n   167→\n   168→        if (new_size != self.cellCount()) {\n   169→            self.allocator.free(self.cells);\n   170→            self.cells = try self.allocator.alloc(Cell, new_size);\n   171→        }\n   172→\n   173→        self.width = new_width;\n   174→        self.height = new_height;\n   175→        @memset(self.cells, Cell.default);\n   176→    }\n   177→\n   178→    /// Compute diff between this buffer and another buffer.\n   179→    /// Returns a slice of CellUpdates representing cells that differ.\n   180→    /// The updates array must be provided by the caller and should have\n   181→    /// capacity for at least cellCount() elements in the worst case.\n   182→    /// Only compares cells within the overlapping region of both buffers.\n   183→    /// Unchanged cells are skipped for minimal output.\n   184→    pub fn diff(self: Buffer, other: Buffer, updates: []CellUpdate) []CellUpdate {\n   185→        const compare_width = @min(self.width, other.width);\n   186→        const compare_height = @min(self.height, other.height);\n   187→\n   188→        var update_count: usize = 0;\n   189→\n   190→        var y: u16 = 0;\n   191→        while (y < compare_height) : (y += 1) {\n   192→            var x: u16 = 0;\n   193→            while (x < compare_width) : (x += 1) {\n   194→                const self_cell = self.get(x, y);\n   195→                const other_cell = other.get(x, y);\n   196→\n   197→                if (!self_cell.eql(other_cell)) {\n   198→                    if (update_count < updates.len) {\n   199→                        updates[update_count] = .{\n   200→                            .x = x,\n   201→                            .y = y,\n   202→                            .cell = self_cell,\n   203→                        };\n   204→                        update_count += 1;\n   205→                    }\n   206→                }\n   207→            }\n   208→        }\n   209→\n   210→        return updates[0..update_count];\n   211→    }\n   212→\n   213→    /// Compute diff and return the number of changed cells.\n   214→    /// Useful for determining if any changes occurred without allocating.\n   215→    pub fn diffCount(self: Buffer, other: Buffer) usize {\n   216→        const compare_width = @min(self.width, other.width);\n   217→        const compare_height = @min(self.height, other.height);\n   218→\n   219→        var count: usize = 0;\n   220→\n   221→        var y: u16 = 0;\n   222→        while (y < compare_height) : (y += 1) {\n   223→            var x: u16 = 0;\n   224→            while (x < compare_width) : (x += 1) {\n   225→                const self_cell = self.get(x, y);\n   226→                const other_cell = other.get(x, y);\n   227→\n   228→                if (!self_cell.eql(other_cell)) {\n   229→                    count += 1;\n   230→                }\n   231→            }\n   232→        }\n   233→\n   234→        return count;\n   235→    }\n   236→};\n   237→\n   238→// ============================================================\n   239→// SANITY TESTS - Basic Buffer functionality\n   240→// ============================================================\n   241→\n   242→test \"sanity: Buffer.init creates buffer with correct dimensions\" {\n   243→    var buf = try Buffer.init(std.testing.allocator, 80, 24);\n   244→    defer buf.deinit();\n   245→\n   246→    try std.testing.expectEqual(@as(u16, 80), buf.width);\n   247→    try std.testing.expectEqual(@as(u16, 24), buf.height);\n   248→    try std.testing.expectEqual(@as(usize, 80 * 24), buf.cells.len);\n   249→}\n   250→\n   251→test \"sanity: Buffer cells initialized to default\" {\n   252→    var buf = try Buffer.init(std.testing.allocator, 10, 10);\n   253→    defer buf.deinit();\n   254→\n   255→    for (buf.cells) |cell| {\n   256→        try std.testing.expect(cell.isDefault());\n   257→    }\n   258→}\n   259→\n   260→test \"sanity: Buffer.set and Buffer.get\" {\n   261→    var buf = try Buffer.init(std.testing.allocator, 80, 24);\n   262→    defer buf.deinit();\n   263→\n   264→    const cell = Cell.styled('X', Style.init().bold());\n   265→    buf.set(5, 5, cell);\n   266→\n   267→    const retrieved = buf.get(5, 5);\n   268→    try std.testing.expectEqual(@as(u21, 'X'), retrieved.char);\n   269→    try std.testing.expect(retrieved.style.hasAttribute(.bold));\n   270→}\n   271→\n   272→// ============================================================\n   273→// BEHAVIOR TESTS - Edge cases and clipping\n   274→// ============================================================\n   275→\n   276→test \"behavior: Buffer.get returns default for out-of-bounds\" {\n   277→    var buf = try Buffer.init(std.testing.allocator, 10, 10);\n   278→    defer buf.deinit();\n   279→\n   280→    const cell = buf.get(100, 100);\n   281→    try std.testing.expect(cell.isDefault());\n   282→}\n   283→\n   284→test \"behavior: Buffer.set ignores out-of-bounds\" {\n   285→    var buf = try Buffer.init(std.testing.allocator, 10, 10);\n   286→    defer buf.deinit();\n   287→\n   288→    buf.set(100, 100, Cell.init('X'));\n   289→\