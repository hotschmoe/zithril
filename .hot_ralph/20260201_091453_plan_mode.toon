    toolu_01EBBQzY5fRkST5mJ5Letkz1,tool_result,"     1→// Geometry types for zithril TUI framework\n     2→// Represents terminal coordinates and rectangular regions\n     3→\n     4→const std = @import(\"std\");\n     5→\n     6→/// Simple x,y coordinate pair in terminal space.\n     7→/// Origin (0,0) is top-left of terminal/region.\n     8→pub const Position = struct {\n     9→    x: u16,\n    10→    y: u16,\n    11→\n    12→    pub fn init(x: u16, y: u16) Position {\n    13→        return .{ .x = x, .y = y };\n    14→    }\n    15→};\n    16→\n    17→/// Represents a rectangular region in terminal coordinates.\n    18→/// Origin (0,0) is top-left. Coordinates increase right and down.\n    19→pub const Rect = struct {\n    20→    x: u16,\n    21→    y: u16,\n    22→    width: u16,\n    23→    height: u16,\n    24→\n    25→    pub fn init(x: u16, y: u16, width: u16, height: u16) Rect {\n    26→        return .{ .x = x, .y = y, .width = width, .height = height };\n    27→    }\n    28→\n    29→    /// Returns a new Rect inset by `margin` on all sides.\n    30→    /// Uses saturating subtraction to prevent underflow.\n    31→    /// Position shifts inward; dimensions shrink by 2*margin (or to zero).\n    32→    pub fn inner(self: Rect, margin: u16) Rect {\n    33→        const double_margin = @as(u32, margin) * 2;\n    34→\n    35→        return .{\n    36→            .x = self.x +| margin,\n    37→            .y = self.y +| margin,\n    38→            .width = if (double_margin >= self.width) 0 else self.width - @as(u16, @intCast(double_margin)),\n    39→            .height = if (double_margin >= self.height) 0 else self.height - @as(u16, @intCast(double_margin)),\n    40→        };\n    41→    }\n    42→\n    43→    /// Returns area (width * height) as u32 to prevent overflow.\n    44→    pub fn area(self: Rect) u32 {\n    45→        return @as(u32, self.width) * @as(u32, self.height);\n    46→    }\n    47→\n    48→    /// Returns true if rect has zero area.\n    49→    pub fn isEmpty(self: Rect) bool {\n    50→        return self.width == 0 or self.height == 0;\n    51→    }\n    52→\n    53→    /// Clamp a point to be within this rect (inclusive of boundaries).\n    54→    /// Returns the closest point inside the rect.\n    55→    pub fn clamp(self: Rect, x: u16, y: u16) Position {\n    56→        const max_x = self.x +| (self.width -| 1);\n    57→        const max_y = self.y +| (self.height -| 1);\n    58→\n    59→        return .{\n    60→            .x = std.math.clamp(x, self.x, max_x),\n    61→            .y = std.math.clamp(y, self.y, max_y),\n    62→        };\n    63→    }\n    64→\n    65→    /// Returns the right edge x coordinate (exclusive).\n    66→    pub fn right(self: Rect) u16 {\n    67→        return self.x +| self.width;\n    68→    }\n    69→\n    70→    /// Returns the bottom edge y coordinate (exclusive).\n    71→    pub fn bottom(self: Rect) u16 {\n    72→        return self.y +| self.height;\n    73→    }\n    74→\n    75→    /// Returns true if the given point is within this rect (inclusive).\n    76→    pub fn contains(self: Rect, x: u16, y: u16) bool {\n    77→        return x >= self.x and\n    78→            x < self.right() and\n    79→            y >= self.y and\n    80→            y < self.bottom();\n    81→    }\n    82→};\n    83→\n    84→// ============================================================\n    85→// SANITY TESTS - Basic functionality\n    86→// ============================================================\n    87→\n    88→test \"sanity: Position init\" {\n    89→    const pos = Position.init(10, 20);\n    90→    try std.testing.expectEqual(@as(u16, 10), pos.x);\n    91→    try std.testing.expectEqual(@as(u16, 20), pos.y);\n    92→}\n    93→\n    94→test \"sanity: Rect init\" {\n    95→    const rect = Rect.init(5, 10, 100, 50);\n    96→    try std.testing.expectEqual(@as(u16, 5), rect.x);\n    97→    try std.testing.expectEqual(@as(u16, 10), rect.y);\n    98→    try std.testin